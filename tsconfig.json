{
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "lib": ["ES2015", "dom", "dom.iterable"],
    "module": "ES2015",
    "target": "ES2015",
    "types": ["@captchafox/types"]
  },
  "include": ["global.d.ts", "src/**/*.ts"]
}
